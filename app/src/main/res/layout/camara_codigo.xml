<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CodigoCamara">

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="559dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="217dp"
            android:layout_height="170dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/magdalena_logo" />

        <TextView
            android:id="@+id/textRightPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Codigo validado"
            android:textColor="@color/Verde_Obscuro"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/textIDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="IDE:"
            android:textColor="@color/Verde_Obscuro"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txtDpiEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="3000123450101"
            android:textColor="@color/Gris"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"/>

        <Button
            android:id="@+id/bttnSiguiente2"
            android:layout_width="291dp"
            android:layout_height="61dp"
            android:text="Siguiente"
            app:backgroundTint="@color/Verde_Base" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>